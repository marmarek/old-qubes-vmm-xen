---
 stubdom/Makefile                       |  1 +
 stubdom/lwip-fix-for-dhcp-server.patch | 15 +++++++++++++++
 2 files changed, 16 insertions(+)
 create mode 100644 stubdom/lwip-fix-for-dhcp-server.patch

diff --git a/stubdom/Makefile b/stubdom/Makefile
index e1359cf..17e3ddb 100644
--- a/stubdom/Makefile
+++ b/stubdom/Makefile
@@ -153,6 +153,7 @@ lwip-$(XEN_TARGET_ARCH): lwip-$(LWIP_VERSION).tar.gz
 	tar xzf $<
 	mv lwip $@
 	patch -d $@ -p0 < lwip.patch-cvs
+	patch -d $@ -p1 < lwip-fix-for-dhcp-server.patch
 	patch -d $@ -p0 < lwip.dhcp_create_request-hwaddr_len.patch
 	touch $@
 
diff --git a/stubdom/lwip-fix-for-dhcp-server.patch b/stubdom/lwip-fix-for-dhcp-server.patch
new file mode 100644
index 0000000..85716dc
--- /dev/null
+++ b/stubdom/lwip-fix-for-dhcp-server.patch
@@ -0,0 +1,15 @@
+--- lwip-x86_64/src/core/ipv4/ip.c	2012-03-04 17:42:42.674834685 +0100
++++ lwip-x86_64/src/core/ipv4/ip.c	2012-03-05 19:59:52.146651987 +0100
+@@ -303,9 +303,12 @@
+         check_ip_src = 0;
+       }
+     }
++  } else if (IPH_PROTO(iphdr) == IP_PROTO_UDP && ip_addr_isbroadcast(&(iphdr->dest), netif)) {
++	  /* dont check src address of broadcast UDP packets (eg. DHCP requests) */
++	  check_ip_src = 0;
+   }
+ #endif /* LWIP_DHCP */
+ 
+   /* broadcast or multicast packet source address? Compliant with RFC 1122: 3.2.1.3 */
+ #if LWIP_DHCP
+   if (check_ip_src)
